# Compiler
CC = g++

# Compiler flags
CFLAGS = -std=c++17 -Wall

# SFML libraries
SFML_LIBS = -lsfml-graphics -lsfml-window -lsfml-system

# Target executable name
TARGET = ../plotGraph

# Source files
SRC = ../src/plotGraph.cpp ../Dependencias/SFGraphing/src/SFPlot.cpp ../Dependencias/SFGraphing/src/PlotDataSet.cpp ../Dependencias/SFGraphing/src/SFPieChart.cpp ../Dependencias/SFGraphing/src/PieChartDataSet.cpp

# Header files
HEADERS = ../Dependencias/SFGraphing/include/SFGraphing/SFPlot.h ../Dependencias/SFGraphing/include/SFGraphing/PlotDataSet.h ../Dependencias/SFGraphing/include/SFGraphing/SFPieChart.h ../Dependencias/SFGraphing/include/SFGraphing/PieChartDataSet.h


# Default target
all: $(TARGET)

$(TARGET): $(SRC) $(HEADERS)
	$(CC) $(CFLAGS) $(SRC) -o $(TARGET) $(SFML_LIBS)

clean:
	rm -f $(TARGET)
